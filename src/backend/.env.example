# ============================================================================
# BellFlow API - Environment Variables
# ============================================================================
# Copy this file to .env and replace the placeholder values with your actual
# credentials. The .env file will be automatically loaded when the app starts.
#
# IMPORTANT: Never commit .env to version control! It's in .gitignore.
# ============================================================================

# ----------------------------------------------------------------------------
# Bright Data API Configuration
# ----------------------------------------------------------------------------
# Required for Twitter/X and LinkedIn scraping via Bright Data engine
#
# How to get your API key:
#   1. Sign up at: https://brightdata.com/
#   2. Go to Dashboard > API Access
#   3. Create or copy your API token
#   4. Paste it below (replace 'your_brightdata_api_key_here')
#
# Example format: BRIGHTDATA_API_KEY=abcd1234-5678-90ef-ghij-klmnopqrstuv
#
# Note: This is optional if you only use Threads scraping (Playwright engine)
# ----------------------------------------------------------------------------
BRIGHTDATA_API_KEY=your_brightdata_api_key_here

# ----------------------------------------------------------------------------
# Optional Configuration
# ----------------------------------------------------------------------------
# Uncomment and modify as needed:

# Debug mode (enables verbose logging)
# DEBUG=False

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# API port (default: 8000)
# PORT=8000

# CORS origins (comma-separated list for production)
# ALLOWED_ORIGINS=http://localhost:3000,https://yourapp.com


# Database Configuration
# MongoDB connection URL (local or Atlas)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=bellflow

# Connection Pool Settings
MAX_POOL_SIZE=10
MIN_POOL_SIZE=1
MAX_IDLE_TIME_MS=30000

# Connection Timeout Settings
CONNECT_TIMEOUT_MS=20000
SERVER_SELECTION_TIMEOUT_MS=5000
NEWS_API_ORG_KEY=
